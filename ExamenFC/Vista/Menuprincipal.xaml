<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenFC.Vista.Menuprincipal">
    <StackLayout Padding="20">
        <Label Text="Frecuencia Cardiaca"
               TextColor="Black"
           FontSize="Large"
           HorizontalOptions="Center"
           Margin="0,20,0,20" />

        <Entry Placeholder="Latidos en 15 seg"
           Keyboard="Numeric"
           Text="{Binding Latidos}" />

        <Button Text="Calcular"
            Command="{Binding CalcularFrecuenciaCommand}" />

        <Label Text="Frecuencia Cardíaca:"
              TextColor="Black"
           FontAttributes="Bold"
           Margin="0,20,0,0" />
        <Label Text="{Binding FrecuenciaCardiaca}" 
               TextColor="Blue"/>

        <Label Text="Estado:"
               TextColor="Black"
           FontAttributes="Bold"
           Margin="0,10,0,0" />
        <Label Text="{Binding Estado}"
               TextColor="Blue"/>
    </StackLayout>

</ContentPage>